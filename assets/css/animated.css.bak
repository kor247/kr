html, body {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    background: #ebf7ff; /* 원하던 배경색 */
    overflow: hidden;
}

/* 배경 이미지 영역 */
.full-bg {
    width: 100%;
    height: 100vh;
    background: #ebf7ff;
    display: flex;
    align-items: center;
    justify-content: center; /* 이미지 중앙 정렬 핵심 */
}

/* 이미지 스타일 */
.full-bg img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;  /* cover → contain 으로 변경 */
    background-color: #ebf7ff; /* 이미지 비율 때문에 남는 공간을 파란색으로 */
    display: block;
}
